//- feedback-form

include /components/v-input/v-input
include /components/v-textarea/v-textarea
include /components/checkbox/checkbox
include /components/button/button

mixin feedback-form()
  feedback-form(
    inline-template
  )
    validation-observer(
      ref="observer"
    )
      form.feedback-form.form.is-bordered(
        action='/thanks.html'
        @submit='onsubmit'
      )
        header.form__header
          h3.form__title.title.is-big По любым вопросам

        .form__body
          .grid.is-columns
            .col-6
              .form__control
                .form__field
                  +v-input({
                    name: 'name',
                    placeholder: 'Ваше имя'
                  })
            .col-6
              .form__control
                .form__field
                  +v-input({
                    name: 'name',
                    mask: '"+7 (###) ### ## ##"',
                    rules: 'required|phone',
                    placeholder: 'Номер телефона'
                  })
            .col-6
              .form__control
                .form__field
                  +v-input({
                    name: 'email',
                    rules: 'email',
                    placeholder: 'Ваш Email'
                  })
            .col-6
              .form__control
                .form__field
                  +v-input({
                    name: 'org',
                    placeholder: 'Название организации'
                  })
            .col-12
              .form__control
                .form__field
                  +v-textarea({
                    name: 'message',
                    rules: 'required',
                    placeholder: 'Ваше сообщение'
                  })

        footer.form__footer
          .form__agreement
            +checkbox({
              name: 'agreement',
              label: 'Заказывая обратный звонок, даю согласие на обработку <a href="/policy.html">персональных данных</a>'
            })( required )
          .form__button
            +button({
              label: 'Отправить сообщение'
            }).is-wide.is-large
